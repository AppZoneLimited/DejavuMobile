<resources>

    <style name="AppBaseTheme" parent="@android:style/Theme.Holo"></style>

    <style name="DJV_TextField_Style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/custom_line_border</item>
        <item name="android:textSize">18dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="DJV_TextArea_Style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/custom_line_border</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">18dp</item>
        <item name="android:minLines">4</item>
        <item name="android:maxLines">4</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="DJV_CheckBox_Style" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:button">@drawable/btn_background</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="DJV_Button_Style" parent="@android:style/Widget.Button">
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>